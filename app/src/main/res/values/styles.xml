<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:itemBackground">@color/colorToolbar</item>
        <item name="android:itemTextAppearance">@style/MenuTextAppearance</item>
    </style>

    <style name="ToolBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/colorPreferenceTitle</item>
        <item name="android:textColorSecondary">@color/colorPreferenceTitle</item>
    </style>

    <style name="PreferenceTheme" parent="AppTheme">
        <item name="android:background">#673AB7</item>
    </style>

    <style name="PreferenceTextAppearanceTitle" parent="@android:style/TextAppearance">
        <item name="android:layout_marginLeft">@dimen/preference_default_margin</item>
        <item name="android:textAppearance">?attr/textAppearanceSearchResultTitle</item>
        <item name="android:textColor">@color/colorPreferenceTitle</item>
        <item name="android:textSize">@dimen/preference_title_size</item>
    </style>

    <style name="PreferenceTextAppearanceSubtitle" parent="PreferenceTextAppearanceTitle">
        <item name="android:textAppearance">?attr/textAppearanceSearchResultSubtitle</item>
        <item name="android:textColor">@color/colorPreferenceSubtitle</item>
        <item name="android:textSize">@dimen/preference_subtitle_size</item>
    </style>

    <style name="PreferenceCategoryTitleText" parent="PreferenceTextAppearanceTitle">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:textColor">@color/colorPreferenceGeneralTitle</item>
    </style>

    <style name="PreferenceDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="PreferenceSwitcher" parent="PreferenceDefault">
        <item name="android:layout_height">@dimen/preference_height</item>
    </style>

    <style name="PreferenceCategory" parent="PreferenceDefault">
        <item name="android:layout_height">@dimen/preference_category_height</item>
    </style>

    <style name="MenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/colorPreferenceTitle</item>
    </style>

    <style name="DefaultAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--        <item name="colorAccent">@android:color/white</item>-->
        <!--        <item name="android:textColorPrimary">@android:color/white</item>-->
        <!--        <item name="colorPrimary">@color/colorAccent</item>-->
        <!--        todo-->
        <item name="colorButtonNormal">@android:color/white</item>
    </style>

</resources>
