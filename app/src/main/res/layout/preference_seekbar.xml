<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/PreferenceDefault">

    <LinearLayout
        android:id="@+id/master_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPreferenceSeekBarSecondaryColor"
        android:orientation="vertical">

        <include layout="@layout/preference_base" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:maxHeight="15dp"
                android:progressDrawable="@drawable/seek_bar_progress_model"
                android:splitTrack="false"
                android:thumb="@drawable/seek_bar_thumb" />

            <TextView
                android:id="@+id/progress"
                style="@style/PreferenceTextAppearanceTitle"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:layout_weight="0"
                tools:text="100" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
