<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:summary="@string/background_image_switcher_summary"
        android:title="@string/preference_switcher_enabled"
        app:key="@string/background_image_global_switcher_key" />

    <Preference
        android:summary="Picks background image from presets"
        android:title="Pick Background Image">
        <intent
            android:action="android.intent.action.GET_CONTENT"
            android:mimeType="image/*" />
    </Preference>

    <Preference
        android:summary="Pick own background image"
        android:title="Choose custom Background Image">
        <intent
            android:action="android.intent.action.GET_CONTENT"
            android:mimeType="image/*" />
    </Preference>
</PreferenceScreen>
