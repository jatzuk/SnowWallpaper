<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:summary="@string/foreground_snowflakes_category_summary"
    android:title="@string/foreground_snowflakes_category">
    <!--todo screen title summary-->

    <dev.jatzuk.snowwallpaper.ui.preferences.custom.CustomSwitchPreference
        app:key="PREF_KEY_IS_SNOWFLAKE_ENABLED"
        app:preferenceDefaultValue="true"
        app:preferenceSummary="@string/background_snowflakes_switcher_summary"
        app:preferenceTitle="@string/preference_switcher_enabled" />

    <dev.jatzuk.snowwallpaper.ui.preferences.custom.CustomSeekBarPreference
        android:dependency="PREF_KEY_IS_SNOWFLAKE_ENABLED"
        app:key="PREF_KEY_SNOWFLAKE_LIMIT"
        app:preferenceDefaultValue="3"
        app:preferenceMax="10"
        app:preferenceMin="1"
        app:preferenceSummary="@string/background_snowflakes_limit_summary"
        app:preferenceTitle="@string/snowflakes_limit" />

    <dev.jatzuk.snowwallpaper.ui.preferences.custom.CustomSeekBarPreference
        android:dependency="PREF_KEY_IS_SNOWFLAKE_ENABLED"
        app:key="PREF_KEY_SNOWFLAKE_VELOCITY_FACTOR"
        app:preferenceDefaultValue="2"
        app:preferenceMax="10"
        app:preferenceMin="1"
        app:preferenceTitle="@string/snowflake_velocity_factor" />

    <dev.jatzuk.snowwallpaper.ui.preferences.custom.CustomSeekBarPreference
        android:dependency="PREF_KEY_IS_SNOWFLAKE_ENABLED"
        app:key="PREF_KEY_SNOWFLAKE_ROTATION_VELOCITY"
        app:preferenceDefaultValue="2"
        app:preferenceMax="10"
        app:preferenceMin="1"
        app:preferenceSummary="todo summary"
        app:preferenceTitle="snowflake rotation angle value" />

    <dev.jatzuk.snowwallpaper.ui.preferences.custom.CustomSwitchPreference
        android:dependency="PREF_KEY_IS_SNOWFLAKE_ENABLED"
        app:key="PREF_KEY_IS_SNOWFLAKE_UNIQUE_RADIUS_ENABLED"
        app:preferenceDefaultValue="true"
        app:preferenceSummary="@string/background_snowflakes_randomize_radius_summary"
        app:preferenceTitle="@string/background_snowflakes_randomize_radius" />

    <dev.jatzuk.snowwallpaper.ui.preferences.custom.CustomSeekBarPreference
        android:dependency="PREF_KEY_IS_SNOWFLAKE_UNIQUE_RADIUS_ENABLED"
        app:key="PREF_KEY_SNOWFLAKE_MIN_RADIUS"
        app:preferenceDefaultValue="30"
        app:preferenceMax="50"
        app:preferenceMin="25"
        app:preferenceTitle="@string/snowflake_min_radius" />

    <dev.jatzuk.snowwallpaper.ui.preferences.custom.CustomSeekBarPreference
        android:dependency="PREF_KEY_IS_SNOWFLAKE_UNIQUE_RADIUS_ENABLED"
        app:key="PREF_KEY_SNOWFLAKE_MAX_RADIUS"
        app:preferenceDefaultValue="60"
        app:preferenceMax="100"
        app:preferenceMin="51"
        app:preferenceTitle="@string/snowflake_max_radius" />

    <dev.jatzuk.snowwallpaper.ui.preferences.custom.CustomSeekBarPreference
        android:dependency="PREF_KEY_IS_SNOWFLAKE_UNIQUE_RADIUS_ENABLED"
        android:disableDependentsState="true"
        app:isPreferenceVisible="false"
        app:key="PREF_KEY_SNOWFLAKE_DEFAULT_RADIUS_UNIQUE_RADIUS_DISABLED"
        app:preferenceDefaultValue="30"
        app:preferenceMax="100"
        app:preferenceMin="10"
        app:preferenceSummary="summary text"
        app:preferenceTitle="the one" />

</PreferenceScreen>
